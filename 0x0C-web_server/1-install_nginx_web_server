#!/usr/bin/env bash
# script to install Nginx

apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.html

echo "http {
	server {
		listen 80;
		
		root /var/www/html;
		
		location / {
			index.html;
		}
	}
}

events { }
" > /etc/nginx/nginx.conf
if [ "$(pgrep -c nginx)" -le 0 ]; then
	service nginx start
else
	service nginx restart
fi
